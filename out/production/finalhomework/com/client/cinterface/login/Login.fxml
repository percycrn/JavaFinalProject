<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.client.cinterface.login.LoginManageClient"
          alignment="CENTER" hgap="10" vgap="10">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Text text="Welcome" style="-fx-font: BOLD 23 Consolas;"
          GridPane.rowIndex="0" GridPane.columnIndex="0"/>

    <Label text="WLANHost"
           GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="host"
               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="PCPort"
           GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="port"
               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="ClientName"
           GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="clientNameLogin"
               GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Password"
           GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="password"
               GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Button text="register" onAction="#handleRegisterAction"
            GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Button text="connect" onAction="#handleLoginAction"
            GridPane.rowIndex="5" GridPane.columnIndex="1"/>

</GridPane>