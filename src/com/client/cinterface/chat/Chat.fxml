<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.client.cinterface.chat.ChatController"
          alignment="CENTER" hgap="10" vgap="10">

    <padding>
        <Insets top="25" bottom="10" right="25" left="25"/>
    </padding>

    <ScrollPane GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="300" prefHeight="400">

    </ScrollPane>

    <ScrollPane GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="300" prefHeight="400">

    </ScrollPane>

    <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="0">
        <Label text="message"/>
        <TextField fx:id="deliveringMessage"/>
    </HBox>

    <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
        <Label text="target client"/>
        <TextField fx:id="targetName"/>
        <Button text="send" onAction="#handleSendMessageAction"/>
    </HBox>
</GridPane>
